body
  font-family: Helvetica
  margin: 0
  padding: 0
  font-size: 16px

a
  color: #ccc

#main
  text-align: center
  width: 80%
  margin: 0 auto

  h1
    font-size: 60px

  p
    font-size: 24px
    color: #444

  .calendar
    width: 100%

    .weekdays
      margin: 0
      font-size: 0

      li
        display: inline-block
        width: 13.6%
        color: #666
        background-color: #ddd
        text-align: center
        font-size: 15px
        padding: 10px

        &.saturday
          color: #6969ff

        &.sunday
          color: #da4343

    .days
      margin: 0
      font-size: 0

      li
        list-style-type: none
        display: inline-block
        width: 13.6%
        text-align: center
        font-size: 12px
        color: #777
        background-color: #eee
        height: 60px
        padding-top: 10px
        border: solid 0.1px #dcdcdc

        &.days-is-not-current
          color: red

  .calendar-bar
    padding: 10px
    margin: 10px 0

.footer
  padding: 16px
  bottom: 0
  position: fixed
  width: 100%
  text-align: center
  background: #444
  color: #ccc
