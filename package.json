{
  "name": "miser",
  "private": true,
  "scripts": {
    "export-node-path": "export NODE_PATH=./resources/js",
    "export:css": "cp ./node_modules/bulma/css/bulma.css ./webroot/public",
    "build:js": "webpack --colors --progress",
    "build:css": "npm run export:css && stylus ./resources/stylus/index.styl -o ./webroot/public",
    "build": "npm run build:js && npm run build:css",
    "watch:js": "npm run build:js -- --watch",
    "watch:css": "npm run build:css -- -w",
    "watch": "npm run watch:js & npm run watch:css",
    "lint": "eslint --fix ./resources/js",
    "test": "npm run export-node-path && mocha --opts ./resources/js/tests/mocha.opts --recursive ./resources/js/tests/**/*-test.js"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.16.3",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "mocha": "^3.1.2",
    "power-assert": "^1.4.1",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6",
    "stylus": "^0.54.5",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "axios": "^0.15.0",
    "babel-polyfill": "^6.16.0",
    "bulma": "^0.2.3",
    "domready": "^1.0.8",
    "es6-promise": "^4.0.5",
    "lodash": "^4.16.4",
    "moment": "^2.17.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0"
  }
}
