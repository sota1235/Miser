body
  font-family: Helvetica
  margin: 0
  padding: 0
  font-size: 16px

a
  color: #ccc

.main
  position: absolute
  top: 35%
  text-align: center
  width: 100%

  h1
    font-size: 60px

  p
    font-size: 24px
    color: #444

  .weekdays
    margin: 0
    padding: 10px 0
    background-color: #ddd

    li
      display: inline-block
      width: 13.6%
      color: #666
      text-align: center

  .days
    padding: 10px 0
    background: #eee
    margin: 0

    li
      list-style-type: none
      display: inline-block
      width: 13.6%
      text-align: center
      margin-bottom: 5px
      font-size: 12px
      color: #777

.footer
  padding: 16px
  bottom: 0
  position: fixed
  width: 100%
  text-align: center
  background: #444
  color: #ccc
